<div class="w-full max-w-[1440px] mx-auto p-2  flex justify-center items-center flex-col lg:px-[5em] mb-[5em]">
    <h1 class="text-center text-[24px] font-bold  py-[0.5em] mb-[0.5em] px-[0.5em] border-b-[1px] border-slate-300">{{ section.settings.title }}</h1>

    <p class="text-[14px] text-slate-500 mb-[2em]">Bring called seed first of third give itself now ment</p>


    <div class="w-full p-2 min-h-[45em]   lg:h-[45em] flex flex-wrap  justify-between items-center gap-[1em] lg:gap-0">
        {% for product in (1..section.settings.number_of_card) %}
            
            <div class=" w-full sm:w-[48%]  md:w-[24%] md:h-[47%]  ">
        <div class="w-full h-[75%] bg-[#F0F2F1] relative flex justify-center items-center overflow-hidden group">

          {{ 'product-1' | placeholder_svg_tag }}

          <div class="w-[90%] p-[0.3em] bg-[rgba(113,205,20,0.55)] absolute bottom-0 flex justify-evenly items-center translate-y-[5em] group-hover:-translate-y-[0em] duration-500 ">
            <div class="flex p-[0.6em] justify-center items-center rounded-full bg-white hover:bg-green-500 hover:text-white duration-300">
              <i class="fa-solid fa-eye text-[1em]"></i>
            </div>
            <div class="flex p-[0.6em] justify-center items-center rounded-full bg-white hover:bg-green-500 hover:text-white duration-300">
              <i class="fa-solid fa-heart "></i>
            </div>
            <div class="flex p-[0.6em] justify-center items-center rounded-full bg-white hover:bg-green-500 hover:text-white duration-300">
              <i class="fa-solid fa-cart-shopping"></i>
            </div>
          </div>
        </div>
        <div class="w-full h-[25%]  border-[1px]  border-slate-300 p-[1.5em] flex flex-col justify-center gap-[0.5em]">
        <p class="text-[14px] roboto group-hover:text-green-500 duration-300 ">HEADING / TITLE</p>
        <div class="w-full flex gap-[1.3em] items-center  ">
            <p class="text-[20px] roboto">$25.00</p>
            <p class="text-[14px] roboto line-through text-slate-400">$35.00</p>
        </div>
    </div>
      </div>
        {% endfor %}
       

       
    </div>
</div>



{% schema %}
{
    "name": "Inspired Products",
    "settings": [
           {
             "type": "text",
             "label": "Title",
              "id": "title",
              "default" : "INSPIRED PRODUCT"
           },

           {
            "type": "range",
            "id": "number_of_card",
             "min": 4,
             "max": 8,
             "default": 8,
             "step": 2,
             "label": "Cards to show"
           }
        ],

        "presets": [{
            "name": "inspired_product"
        }]
}
{% endschema %}