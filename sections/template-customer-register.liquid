{% comment %} <div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
      <div class="max-w-md w-full space-y-8">
          <div>
              <h1 class="text-center text-3xl font-bold mt-6">Register an account</h1>
          </div>
          <div class="mt-8">
              {% form 'create_customer' %}
                  {% if form.errors %}
                      <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
                          <strong class="font-bold">Error!</strong>
                          <p class="block sm:inline">{{ form.errors | default_errors }}</p>
                      </div>
                  {% endif %}
  
                  <div class="my-2">
                      <label for="first_name" class="sr-only">First name</label>
                      <input type="text"
                          name="customer[first_name]"
                          id="first_name"
                          autocomplete="given-name"
                          class="relative block w-full px-3 py-2 border"
                          placeholder="First name"
                      >
                  </div>
  
                  <div class="my-2">
                      <label for="last_name" class="sr-only">Last name</label>
                      <input type="text"
                          name="customer[last_name]"
                          id="last_name"
                          autocomplete="family-name"
                          class="relative block w-full px-3 py-2 border"
                          placeholder="Last name"
                      >
                  </div>
  
                  <div class="my-2">
                      <label for="birthday" class="sr-only">Birthday</label>
                      <input type="date"
                          name="customer[note][Birthday]"
                          id="birthday"
                          class="relative block w-full px-3 py-2 border"
                      >
                  </div>
  
                  <div class="my-2">
                      <label for="email_address" class="sr-only">Email address</label>
                      <input type="email"
                          name="customer[email]"
                          id="email_address"
                          autocomplete="email"
                          class="relative block w-full px-3 py-2 border"
                          placeholder="Email address"
                      >
                  </div>
  
                  
                  <div class="my-2">
                      <label for="password" class="sr-only">Password</label>
                      <input type="password"
                          name="customer[password]"
                          id="password"
                          autocomplete="new-password"
                          class="relative block w-full px-3 py-2 border"
                          placeholder="Password"
                      >
                  </div>
                  
                  <div>
                      <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900">
                          Create account
                      </button>
                  </div>
              {% endform %}
          </div>
      </div>
</div> {% endcomment %}


<div class="bg-gray-100 flex items-center justify-center min-h-screen p-4">
  <div class="bg-white rounded-lg shadow p-8 max-w-md w-full">
    <h2 class="text-2xl font-bold text-green-600 mb-6 text-center">Create Account</h2>

    {% form 'create_customer' , return_to:routes.account_login_url %}
      <div class="mb-4">
        {{ form.errors | default_errors }}
      </div>

      <div class="grid grid-cols-2 gap-4 mb-4">
        <div>
          <label for="firstName" class="block text-gray-700 mb-1">First Name</label>
          <input
            type="text"
            id="firstName"
            name="customer[first_name]"
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:ring-green-500"
            required>
        </div>

        <div>
          <label for="lastName" class="block text-gray-700 mb-1">Last Name</label>
          <input
            type="text"
            id="lastName"
            name="customer[last_name]"
            class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:ring-green-500"
            required>
        </div>
      </div>

      <div class="mb-4">
        <label for="email" class="block text-gray-700 mb-1">Email</label>
        <input
          type="email"
          id="email"
          name="customer[email]"
          class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:ring-green-500"
          required>
      </div>

      <div class="mb-6">
        <label for="password" class="block text-gray-700 mb-1">Password</label>
        <input
          type="password"
          id="password"
          name="customer[password]"
          class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:ring-green-500"
          required>
      </div>

      <div class="mb-6 text-left">
        <a href="/" class="text-green-600 text-sm hover:text-green-800">Back to Home</a>
      </div>

      <button type="submit" class="w-full bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700">
        Sign Up
      </button>

      <div class="mt-4 text-center text-sm">
        Already have an account?
        <a href="{{ routes.account_login_url }}" class="text-green-600 hover:text-green-800">Sign In</a>
      </div>
    {% endform %}
  </div>
</div>