<div class="flex flex-col items-center w-full max-w-[1440px] mx-auto my-8 ">
    <h1 class="text-center text-[24px] font-bold  py-[0.5em] mb-[0.5em] px-[0.5em] border-b-[1px] border-slate-300">{{ section.settings.title }}</h1>

    <p class="text-[14px] text-slate-500 mb-[4em]">Bring called seed first of third give itself now ment</p>

    <div class="w-full p-2  flex justify-between sm:px-[5em] py-[1em] flex-wrap gap-[1em]">

    {% assign product_featured = collections['mens-collection'].products %}
        
        {% for product in product_featured reversed limit: section.settings.number_of_products_to_show   %}
            {% render 'product-card', product_product: product %}
        {% else %}
            {% for item in (1..3) %}
                {% render 'product-card-placeholder' %}
            {% endfor %}
        {% endfor %}
    </div>
</div>





{% schema %}
{
    "name": "Featured Collection",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "FEATURED PRODUCT",
            "label": "Title"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "number_of_products_to_show",
            "min": 3,
            "max": 12,
            "default": 3,
            "label": "Number of products to show"
        }
    ],
    "presets": [
        {
            "name": "Featured Collection"
        }
    ]
}
{% endschema %}