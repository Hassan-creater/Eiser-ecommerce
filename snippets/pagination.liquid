{% if pagination.pages > 1 %}
    <nav class='flex justify-center gap-2 my-8'>
        {% if pagination.previous %}
            
            <a class="px-7 py-2 border-[1.5px] border-green-400 rounded-[5px] hover:bg-green-400 duration-300 hover:text-white" href="{{pagination.previous.url}}">{{pagination.previous.title}}</a>
        {% endif %}

        {% comment %} {% for part in page.parts %}
            {% if part.is_link %}
                <a class="px-7 py-2 border-[1.5px] border-blue-500 rounded-[5px] hover:bg-blue-500 duration-300 hover:text-white" href="{{part.url}}">{{part.tite}}</a>
            {% endif %}
            {% else %}
            <span class="px-7 py-2 border-[1.5px] border-blue-500 text-black rounded-[5px] bg-blue-500  ">{{part.title}}</span>
        {% endfor %} {% endcomment %}


        {% for part in pagination.parts %}
            {% if part.is_link %}
                <a class="px-4 py-2 border border-green-400 rounded-md hover:bg-green-400 hover:text-white transition-colors duration-300" href="{{ part.url }}">
                    {{ part.title }}
                </a>
            {% else %}
                {% if part.title == pagination.current_page %}
                    <span class="px-4 py-2 border border-green-400 rounded-md bg-green-400 text-white cursor-default">
                        {{ part.title }}
                    </span>
                {% else %}
                    <span class="px-4 py-2 border border-green-400 rounded-md cursor-default">
                        {{ part.title }}
                    </span>
                {% endif %}
            {% endif %}
        {% endfor %}

        {% if pagination.next %}
            
            <a class="px-7 py-2 border-[1.5px] border-green-400 rounded-[5px] hover:bg-green-400 duration-300 hover:text-white" href="{{pagination.next.url}}">{{pagination.next.title}}</a>
        {% endif %}
    </nav>
{% endif %}

